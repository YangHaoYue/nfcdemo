.title-box {
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
  text-align: start;
  border-bottom: 1rpx solid #d1d1d1;
}
.fixed-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 99;
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}
.my-button-primary {
  height: 80rpx;
  background: linear-gradient(270deg, #5063b4 2%, #457fff 97%);
  border-radius: 8rpx;
  font-size: 34rpx;
  color: #ffffff;
  line-height: 80rpx;
  margin: 10rpx 0rpx;
  text-align: center;
}
.my-button-primary:active {
  background: linear-gradient(270deg, #4b5eaa 2%, #427af4 97%);
}
.form-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 80rpx;
}
.form-box .form-box-input {
  font-size: 28rpx;
  flex: 1;
  margin-left: 30rpx;
  color: #3e3e3e;
  text-align: start;
}
.form-box .form-box-time {
  font-size: 28rpx;
  margin-left: 30rpx;
  width: 200rpx;
  color: #3e3e3e;
  text-align: start;
}

